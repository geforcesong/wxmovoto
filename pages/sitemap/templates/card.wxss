.card{
    position: relative;
}

.card image{
    width: 100%;
    height: 500rpx;
}

.card .detail{
    position: absolute;
    left: 0;
    bottom:10rpx;
    color: white;
}

.card ul{
    list-style: none;
}

.card ul li{
    float: left;
    clear: left;
    font-size: 36rpx;
    text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.5);
    margin-top: 5rpx;
    padding-left: 10rpx;
}

.card li.price{
    font-size: 50rpx;
}

.card .cardLabels{
    position: absolute;
    left: 10rpx;
    top: 10rpx;
}