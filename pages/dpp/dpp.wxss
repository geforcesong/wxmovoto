.dpp .topSwiperView swiper {
    height: 500rpx;
}
.dpp .topSwiperView swiper .slide-image{
    width: 100%;
    height: 100%;
}

.topSwiperView{
    position: relative;
}

.topSwiperView .detail{
    position: absolute;
    left: 0;
    bottom:10rpx;
    color: white;
}

.topSwiperView ul{
    list-style: none;
}

.topSwiperView ul li{
    float: left;
    clear: left;
    font-size: 36rpx;
    text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.5);
    margin-top: 5rpx;
    padding-left: 10rpx;
}

.topSwiperView li.price{
    font-size: 50rpx;
}