@import "../../assets/styles/framework.wxss";
@import "../sitemap/templates/card.wxss";
@import "../common/cardLabels/cardLabels.wxss";
.topHeader{
    width: 100%;
    height: 100rpx;
    background-color: #2759a4;
}

.topHeader .left image{
    width: 200rpx;
    height: 60rpx;
    margin-top: 12rpx;
}

.dpp .topSwiperView swiper {
    height: 500rpx;
}
.dpp .topSwiperView swiper .slide-image{
    width: 100%;
    height: 100%;
}

.topSwiperView{
    position: relative;
}

.topSwiperView .detail{
    position: absolute;
    left: 0;
    bottom:10rpx;
    color: white;
}

.topSwiperView .detail ul{
    list-style: none;
}

.topSwiperView .detail ul li{
    float: left;
    clear: left;
    font-size: 36rpx;
    text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.5);
    margin-top: 5rpx;
    padding-left: 10rpx;
}

.topSwiperView .detail li.price{
    font-size: 50rpx;
}

.topSwiperView .labels{
    position: absolute;
    left: 10rpx;
    top: 10rpx;
}

.box{
    margin:30rpx 20rpx;
    padding-bottom: 20rpx;
    color: #4a4a4a;
    border-bottom: solid #d7d7d7 2px;
}

.box .title{
    font-weight: bold;
    padding-bottom: 16rpx
}

.box .small{
    padding-bottom: 16rpx;
    font-size: 30rpx;
}

.mainFeature ul{
    list-style-type: none;
}

.mainFeature ul li{
    clear: left;
    float: left;
    line-height: 60rpx;
}